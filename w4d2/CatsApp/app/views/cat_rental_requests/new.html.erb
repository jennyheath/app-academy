<h2>Rent a cat!</h2>

<!-- render errors -->

<form action="/cat_rental_requests" method="post">

  <label for="cat">Select a cat</label>
  <select name="cat_rental_request[cat_id]">
    <option value="<%= nil %>">option...</option>
    <% @cats.each do |cat| %>
      <option value="<%= cat.id %>"
        <%#= "selected" if cat.id == @cat_rental_request.cat_id %>>
        <%= cat.name %>
      </option>
    <% end %>
  </select>
  <br>

  <label for="start_date">Start date</label>
  <input
    name="cat_rental_request[start_date]"
    id="start_date"
    type="date"
    value="<%= @cat_rental_request.start_date.strftime("%Y-%m-%d") if @cat_rental_request.start_date %>">
  <br>

  <label for="end_date">End date</label>
  <input
    name="cat_rental_request[end_date]"
    id="end_date"
    type="date"
    value="<%= @cat_rental_request.end_date.strftime("%Y-%m-%d") if @cat_rental_request.end_date %>">
  <br>

  <input type="submit" value="Submit Rental Request">

</form>
